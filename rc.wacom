#!/bin/bash
# rc.wacom - set the keys of the tablet to something useful (gimp setup)
# Released into free domain

xsetwacom set "Wacom Bamboo pad" button1 "key ctrl z"
xsetwacom set "Wacom Bamboo pad" button2 "key p"
xsetwacom set "Wacom Bamboo pad" button3 "key ctrl y"
xsetwacom set "Wacom Bamboo pad" button4 "key shift b"
